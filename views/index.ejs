    <header class="navbar navbar-expand-lg border-bottom fixed-top mt-0 pt-0" id="navbar">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="/assets/logo.jpg" alt="Logo" width="50px" style="border-radius: 50%;">
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto ">
                <li class="nav-item"><a href="#home" class="nav-link" aria-current="page">Home</a></li>
                <li class="nav-item"><a href="#custom-cards" class="nav-link">Features</a></li>
                <li class="nav-item"><a href="#about" class="nav-link">About</a></li>
            </ul>
        </div>
    </div>
</header>

    <!--Hero Section: The main QR CODE AREA-->
    <div class="px-4 py-5 my-5 text-center" id="home"> 
        <img class="d-block mx-auto mb-4" src="/assets/logo.png" alt="" width="90" style="border-radius: 50%;"> 
        <h1 class="display-5 " id="hero-title">QRify : Instant QR Code Generator</h1> 
        <div class="col-lg-6 mx-auto" id="hero-section"> 
            <p class="mb-4">
                Turn any URL into a vibrant QR code in seconds. Simple, fast, and free — QRify makes sharing links effortless and stylish.
            </p> 
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center"> 
                <form method="post" action="/generate">
                    <div class="mb-3">
                        <label for="url" class="form-label">Enter Your URL: </label>    
                        <input type="url" name="url" class="form-control" id="url" aria-describedby="url">
                        <div class="form-text" id="form-text">Example URL: https://www.google.com
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg px-4 rounded-pill">Generate QR Code</button>
                </form>
            </div> 
        </div>
    </div>  
        <!--Qr Code generated section-->
        <% if (locals.qrCode) { %>
        <div class="container my-5 mx-auto d-flex justify-content-center" id="qr-code-section"> 
            <div class="card" style="width: 18rem;">
                <%- qrCode %>
                <div class="card-body align-items-center">
                    <h5  id="card-generated-title">Your QR Code Has Been Generated!!</h5>
                    <p id="card-generated-text">Your provided URL: <strong><%= url %></strong>  
                    </p>
                    <a href="data:image/svg+xml;base64,<%= Buffer.from(qrCode).toString('base64') %>" class="btn btn-primary" download="qr-code.svg" >Download</a>
                </div>
                <a class="btn btn-primary " href="<%= address %>">Generate New QR</a>
            </div> 
            
        </div>    
    <% } %>
    

